@model WebApp.Models.ViewModels.CreateUserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link href="~/Styles/FormStyle.css" rel="stylesheet" />
    <title>Create User</title>
</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Create User</h2>
                        <form method="POST" action="/User/CreateUser" class="register-form" id="form">
                            <div class="form-group">
                                <label for="FirstName"><i class="zmdi zmdi-circle"></i></label>
                                <input type="text" name="FirstName" id="FirstName" placeholder="First Name" required />
                            </div>
                            <div class="form-group">
                                <label for="LastName"><i class="zmdi zmdi-circle"></i></label>
                                <input type="text" name="LastName" id="LastName" placeholder="Last Name" required />
                            </div>
                            <div class="form-group">
                                <label for="UserName"><i class="zmdi zmdi-circle"></i></label>
                                <input type="text" name="UserName" id="UserName" placeholder="User Name" required />
                            </div>
                            <div class="form-group">
                                <div class="box">
                                    <select name="Gender" id="Gender">
                                        <option disabled="disabled" selected="selected" value="gender">Gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="submitButton" id="submitButton" class="form-submit" value="Submit" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/User/Users" class="signup-image-link">See all users</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
