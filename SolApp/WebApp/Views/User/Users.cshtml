@model List<WebApp.Models.ViewModels.UsersViewModel>
@{
    Layout = null;
}
@{
    Random rnd = new Random();
    int num = rnd.Next(1, 4);
    int numDos = rnd.Next(1, 4);
    string str = num.ToString() + "m.png";
    string str2 = numDos.ToString() + "f.png";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Lib/fontawesome-free-5.15.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Styles/Users.css" rel="stylesheet" />
    <title>Users</title>
</head>
<body>
    <div class="profile-area">
        <div class="container">
            <div class="row">
                @foreach (var user in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            @if (user.Gender.ToString() == "female")
                            {
                                <div class="img1"><img src="~/Images/p2.jpg" alt="" /></div>
                                <div class="img2"><img src="~/Images/@str2" alt="" /></div>
                            }
                            else if (user.Gender.ToString() == "male")
                            {
                                <div class="img1"><img src="~/Images/p1.jpg" alt="" /></div>
                                <div class="img2"><img src="~/Images/@str" alt="" /></div>
                            }
                            else
                            {
                                <div class="img1"><img src="~/Images/p3.jpg" alt="" /></div>
                                <div class="img2"><img src="~/Images/v.png" alt="" /></div>
                            }
                            <div class="main-text">
                                <h2>@user.UserName</h2>
                                <p>@user.FirstName @user.LastName</p>
                                <p>@Convert.ToDateTime(user.RegisterDate).ToString("dddd dd MMMM yyyy") </p>
                            </div>
                            <div class="soc">
                                <ul>
                                    <li><a href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fab fa-google-plus-g" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fab fa-linkedin" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>

                            <div class="socials">
                                    
                                <a href="@Url.Action("EditUser", "User",new { id = user.Id_User })" class="far fa-edit"> </a>
                                <a href="@Url.Action("DeleteUser", "User",new { id = user.Id_User })" onclick="return confirm('Are you sure you want to delete?')" class="fas fa-trash-alt red"> </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
